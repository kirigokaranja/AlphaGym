<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/myworkout_cardview"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="#ccFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:background="@color/burgandy"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/myworkout_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="26dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
        
        <TextView
            android:id="@+id/myworkout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/myworkout_img"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="cardio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/work_date"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myworkout_img"
            android:textSize="18sp"
            android:text="Date: 12/8/2017"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/work_location"
            android:layout_toRightOf="@id/myworkout_img"
            android:layout_below="@id/work_date"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Location: Nairobi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myworkout_img"
            android:layout_below="@id/work_location">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_reps"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Reps: 10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_sets"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Sets: 5"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_id_my"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>